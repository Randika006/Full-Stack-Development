<form action="/schedule" method="POST" autocomplete="off">
   <input type="hidden" name="_id" value="{{schedule._id}}">
        <div class="form-group">
            <label class="fsize">Activity ID</label>
            <input type="text" class="form-control" name="ActivityID" value="{{schedule.ActivityID}}" placeholder="Activity ID"  style="font-size:12pt;height:45px;width:700px;">
            <div class="text-danger">
                {{schedule.ActivityIDError}}
            </div>
        </div>
        <div class="form-group">
            <label class="fsize">Start Date</label>
            <input type="text" class="form-control" name="StartDate" value="{{schedule.StartDate}}" placeholder="Start Date"  style="font-size:12pt;height:45px;width:700px;">
            <div class="text-danger">
                {{schedule.StartDateError}}
            </div>
        </div>
        <div class="form-row">
            <div class="form-group md-6">
                <label class="fsize">End Date</label>
                <input type="text" name="EndDate" value="{{schedule.EndDate}}" placeholder="End Date" class="form-control"  style="font-size:12pt;height:45px;width:700px;">
                
             </div>
            <div class="form-group md-6">
                <label class="fsize">Activity Title</label>
                <input type="text" name="title" value="{{schedule.title}}" placeholder="Activity Title"  class="form-control"  style="font-size:12pt;height:45px;width:700px;">
            </div>
        </div>


        <div class="form-row">
            <div class="form-group md-6">
                <label class="fsize">Description</label>
                <input type="text" name="des" value="{{schedule.des}}" placeholder="Description" class="form-control" size="100" style="font-size:12pt;height:45px;width:700px;">
                
             </div>
            <div class="form-group md-6">
                <label class="fsize">Activity Type</label>
                <input type="text" name="Atype" value="{{schedule.Atype}}" placeholder="Activity Type"  class="form-control"  style="font-size:12pt;height:45px;width:700px;">
            </div>
        </div>


        <div class="form-group">
            <button type="submit" class="btn btn-info"><i class="fa fa-database"></i>Submit</button>
            <a href="/schedule/list" class="btn btn-danger">
                <i class="fa fa-list-alt"></i>View All
            </a>
        </div>
    </form>
      
